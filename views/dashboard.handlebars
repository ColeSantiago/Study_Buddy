

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div style="color: #fff">
 				<h1> Welcome to Study Buddy!! 
 					{{user.user_name}}
 				<button class="btn btn-danger" id="signout-btn" data-id={{user.id}}> 
 		 		Sign out </button></h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
 		 	<input TYPE="button" class="btn btn-lg btn-info btn-block" 
			id="btn-all-groups" value="VIEW ALL GROUPS"
			onclick="window.location.href='/api/groups'"> 
		</div>
		<div class="col-md-12">
 		 	<input TYPE="button" class="btn btn-lg btn-warning btn-block" 
			id="btn-your-groups" value="VIEW YOUR ADMIN GROUPS"
			onclick="window.location.href='/api/admin/{{user.id}}'"> 
		</div>
		<div class="col-md-12">
 		 	<input TYPE="button" class="btn btn-lg btn-success btn-block" 
			id="btn-your-groups" value="VIEW YOUR GROUPS"
			onclick="window.location.href='/api/groups/{{user.id}}'"> 
		</div>
		<div class="col-md-12">
			<input TYPE="button" class="btn btn-lg btn-danger btn-block" 
			id="btn-create-group" value="CREATE A GROUP"
			data-toggle="modal" data-target="#newGroupModal"> 
		</div>
	</div>
</div>


<!-- Modal -->
<div id="newGroupModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      	<h4 class="modal-title">CREATE A NEW GROUP</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>       
      </div>
      <div class="modal-body">
      	<form id="group-form" name="group" method="post">
	        <div class="form-group">
	  			<label for="id-group-name" style="color:red">Group Name</label>
	 			 <input type="text" class="form-control" id="group-name" placeholder="Enter a group name">
			</div>
			<div class="form-group">
	  			<label for="id-group-desc" style="color:red">Group Description:</label>
	 			 <textarea class="form-control" rows="3" id="group-desc" placeholder="Enter group description"></textarea>
			</div> 
				<button class="btn btn-primary btn-lg" id="btn-create-grp" type="submit">Create Group</button>

		</form>	
      </div>
    </div>
  </div>
</div>